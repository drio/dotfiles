#!/bin/bash
# vim: ft=sh:
#
dir=$( dirname -- "$0"; )
source $dir/_scripts-env

echo "backup up hass"
find /Users/drio/dev/iot/hass-backups/backups -mindepth 3 -mtime 30 -exec rm -rv {} +;
rsync --delete -avz -e ssh gopher.local:/home/drio/dc/hass-config/backups /Users/drio/dev/iot/hass-backups/

#ssh $backup_piip 'sudo mount -o defaults /dev/sda1 /mnt/external_drive_restic'
cd ~/dev/github.com/drio/restic-backup
make
cd -
